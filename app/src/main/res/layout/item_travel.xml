<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_item_clicked"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_image"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_image"
                android:ellipsize="end"
                android:gravity="top|start"
                android:lineSpacingExtra="1dp"
                android:maxLines="2"
                android:text="No data title"
                android:fontFamily="sans-serif"
                android:textColor="@color/font_black_0"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_image"
                android:text="Title: 23"
                android:textColor="@color/font_black_5"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_rank"
                android:text="Date"
                android:textColor="@color/font_black_5"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/date"
                android:text="Tag"
                android:textColor="@color/font_black_5"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="bottom|start"
                android:layout_marginLeft="20dp"
                android:text="420 Likes"
                android:textColor="@color/font_black_5"
                android:textSize="14sp"
                android:layout_alignBottom="@+id/iv_image"
                android:layout_toRightOf="@+id/iv_image"
                android:paddingTop="4dp"/>

            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|start"
                android:text="420 Comment"
                android:textColor="@color/font_black_5"
                android:textSize="14sp"
                android:paddingTop="4dp"
                android:layout_alignTop="@+id/like"
                android:layout_alignLeft="@+id/date"
                android:layout_alignStart="@+id/date" />
        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/font_black_5"/>

</LinearLayout>